{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "./dist/",
    "listEmittedFiles": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "compileOnSave": true
}
